############################################################
# üåç SERVER CONFIGURATION
############################################################
PORT=3000
NODE_ENV=development
API_PREFIX=/api/v1

############################################################
# üóÑÔ∏è DATABASE CONFIGURATION (PostgreSQL)
############################################################
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USER=root
DB_PASS=123456
DB_NAME=data_management

# Connection mode: local | cloud
DB_CONNECTION_MODE="local"

# Enable or disable automatic schema sync
AUTO_SYNC_DB=false

# Optional: SSL CA certificate for production (uncomment if needed)
# DB_CA=./config/ssl/server-ca.pem

############################################################
# üåê CORS CONFIGURATION
############################################################
# Allowed frontend origins (comma-separated, no spaces)
CORS_ORIGIN=http://localhost:3000

############################################################
# üìß EMAIL CONFIGURATION (SMTP)
############################################################
# SMTP server settings
# For Gmail: smtp.gmail.com, port 587
# For Outlook: smtp.office365.com, port 587
# For Yahoo: smtp.mail.yahoo.com, port 465
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-16-digit-app-password

# Email sender information
SMTP_FROM_NAME=Employee Management System
SMTP_FROM_EMAIL=noreply@yourcompany.com

# Admin email for notifications (important!)
ADMIN_EMAIL=admin@yourcompany.com

############################################################
# ‚è∞ CRON JOB CONFIGURATION
############################################################
# Timezone for cron jobs
# Options: Asia/Jakarta (WIB), Asia/Makassar (WITA), Asia/Jayapura (WIT)
TIMEZONE=Asia/Jakarta

# Cron expressions (optional, uses defaults if not set)
# Format: minute hour day month dayOfWeek
# Use https://crontab.guru to validate expressions

# Daily report: every day at 8:00 AM
CRON_DAILY_REPORT=0 8 * * *

# Birthday reminder: every day at 7:00 AM
CRON_BIRTHDAY_REMINDER=0 7 * * *

# Backup reminder: every Sunday at 2:00 AM
CRON_BACKUP_REMINDER=0 2 * * 0


